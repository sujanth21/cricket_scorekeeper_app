<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.sujanth.cricketgame_scorekeeperapp.MainActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:text="Cricket - The Gentlemen Game"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Team A"
                    android:textAlignment="center"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/team_a_total_score_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10sp"
                        android:text="Total Score: "
                        android:textAppearance="?android:attr/textAppearanceLarge"/>

                    <TextView
                        android:id="@+id/team_a_scores_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10sp"
                        android:text=""
                        android:textStyle="bold"
                        android:textAppearance="?android:attr/textAppearanceLarge"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/team_a_wicket_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wicket: "
                        android:layout_margin="10dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>

                    <TextView
                        android:id="@+id/team_a_wicket_display_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text=""
                        android:textAppearance="?android:attr/textAppearanceMedium"/>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:text="Batsman Score" />

                        <Button
                            android:id="@+id/team_a_one_run_button"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:text="1" />

                        <Button
                            android:id="@+id/team_a_two_run_button"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:text="2" />

                        <Button
                            android:id="@+id/team_a_three_run_button"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:text="3" />

                        <Button
                            android:id="@+id/team_a_four_run_button"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:text="4" />

                        <Button
                            android:id="@+id/team_a_six_run_button"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:text="6" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="Extras/Wickets" />

                        <Button
                            android:id="@+id/team_a_wide_run_button"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:text="Wide" />

                        <Button
                            android:id="@+id/team_a_byes_run_button"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:text="Byes" />

                        <Button
                            android:id="@+id/team_a_leg_byes_run_button"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:text="Leg Byes" />

                        <Button
                            android:id="@+id/team_a_no_ball_run_button"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:text="No Ball" />

                        <Button
                            android:id="@+id/team_a_wicket_button"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:text="Wicket" />

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"></View>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Team B"
                    android:textAlignment="center"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/team_b_total_score_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10sp"
                        android:text="Total Score: "
                        android:textAppearance="?android:attr/textAppearanceLarge"/>

                    <TextView
                        android:id="@+id/team_b_scores_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10sp"
                        android:text=""
                        android:textStyle="bold"
                        android:textAppearance="?android:attr/textAppearanceLarge"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/team_b_wicket_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wicket: "
                        android:layout_margin="10dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>

                    <TextView
                        android:id="@+id/team_b_wicket_display_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text=""
                        android:textAppearance="?android:attr/textAppearanceMedium"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:text="Batsman Score" />

                        <Button
                            android:id="@+id/team_b_one_run_button"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:text="1" />

                        <Button
                            android:id="@+id/team_b_two_run_button"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:text="2" />

                        <Button
                            android:id="@+id/team_b_three_run_button"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:text="3" />

                        <Button
                            android:id="@+id/team_b_four_run_button"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:text="4" />

                        <Button
                            android:id="@+id/team_b_six_run_button"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:text="6" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="Extras/Wickets" />

                        <Button
                            android:id="@+id/team_b_wide_run_button"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:text="Wide" />

                        <Button
                            android:id="@+id/team_b_byes_run_button"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:text="Byes" />

                        <Button
                            android:id="@+id/team_b_leg_byes_run_button"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:text="Leg Byes" />

                        <Button
                            android:id="@+id/team_b_no_ball_run_button"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:text="No Ball" />

                        <Button
                            android:id="@+id/team_b_wicket_button"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:text="Wicket" />

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/commentary_box_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text=""
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/reset_score_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset Scores"
            android:layout_margin="20dp"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/game_rules_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Game Rules"
            android:layout_margin="20dp"
            android:layout_gravity="center"/>

    </LinearLayout>


</ScrollView>